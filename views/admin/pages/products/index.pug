extends ../../layouts/default.pug

block main
    h3 Quản Lý Sản Phẩm

    // Container
    .container.mt-4
      // Bảng sản phẩm
      .table-responsive
        table.table.table-bordered.table-hover.text-center
          thead.table-dark
            tr
              th ID
              th Ảnh
              th Tên Sản Phẩm
              th Giá
              th Trạng Thái
              th Hành Động
          tbody
            each item, index in products
              tr
                td #{index + 1}
                td: img.img-thumbnail(
                  src= item.thumbnail 
                  alt= item.title
                  width="100px"
                  height="auto"
                  )
                td #{item.title}
                td #{item.price}$
                td
                  if (item.status === 'active')
                    span.badge.bg-success Hoạt động
                  else
                    span.badge.bg-danger Dừng hoạt động
                td
                  button(class="btn btn-warning btn-sm") Sửa
                  button(class="btn btn-danger btn-sm ml-1") Xóa  

